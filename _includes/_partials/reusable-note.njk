<article class="post-type-note h-entry item--contained {% if hideLink === true %}item--alone{% endif %}">
    {% if hideLink === true %}
        <time class="dt-published">{{ date | simpleDate }}</time>
    {% else %}
        <a href="{{ url }}">
            <time class="dt-published">{{ date | simpleDate }}</time>
        </a>
    {% endif %}
    <p class="p-content">
        {{ content | safe }}
    </p>
    <a class="u-author visually-hidden" href="/">rich</a>
</article>