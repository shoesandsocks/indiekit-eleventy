<article class="post-type-reply h-entry item--contained {% if hideLink === true %}item--alone{% endif %}">
    {% if inReplyTo === undefined %}
        {% set inReplyTo = "in-reply-to" | getVarFromString() %}
    {% endif %}
    <p>
        {% if rsvp !== undefined %}
            RSVPing "{{ rsvp }}" to
        {% else %}
            Replying to
        {% endif %}
        <a class="u-in-reply-to" href="{{ inReplyTo }}">{{ inReplyTo }}</a>
    </p>
    <p class="e-content p-name">
        {{ content | safe }}
    </p>
    {% include "_partials/h-card.njk" %}
    {% include "_partials/permalink.njk" %}
</article>