<article class="h-event item--contained {% if hideLink === true %}item--alone{% endif %}">
    {% if hideLink === true %}
        <h1 class="p-name">{{ title }}</h1>
    {% else %}
        <a href="{{ url }}">
            <h1 class="p-name">{{ title }}</h1>
        </a>
    {% endif %}
    <p>
        From
        <time class="dt-start" datetime="{{ start }}">{{ start | simpleDate }}</time>
        to
        <time class="dt-end" datetime="{{ end }}">
        {{ end | simpleDate }}
    </time>
    at
    <span class="p-location">{{ location.name }}</span>
</p>
<p class="p-summary">{{ content | safe }}</p>
</article>